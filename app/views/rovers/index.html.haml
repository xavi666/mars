.container
  %h1= "Xing - Mars Rovers"
  .warning
    = flash[:error]
  %hr

  = form_tag("/rovers/move", method: :post) do
    %fieldset
      %legend= "Configuration"
      = text_area_tag :input, params[:input], rows: 10, cols: 50

    = submit_tag "MOVE"

  %br
  
  - if @rovers and @rovers.any?
    %fieldset
      %legend= "OutPut"
      - @rovers.each do |rover|
        = rover.show_coordinates
        %br